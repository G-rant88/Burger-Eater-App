<div id="size" class="row center-align" data-id={{obj.user}}>
  <style>
  #size{
      margin-top: 15%;
      color: dodgerblue
    }
    body{
      background-color: lemonchiffon;
    }
</style>
<h1>Update the Burger with an id of {{obj.data.id}}</h1>
<br>

<form id="addburg" class="center-align input-field" data-id="{{obj.data.id}}">

<i class="material-icons prefix">create</i>
<input id="icon_prefix" type="text" class="validate" name="burgeradd" value="{{obj.data.burger_name}}">
          <label for="icon_prefix">Burger Name</label>
        </form>

<form id="adding" class="center-align input-field" data-id="{{id}}">   
          <i class="material-icons prefix">format_list_numbered</i>
          <input id="icon_telephone" type="tel" class="validate" name="burgering" value="{{obj.data.ingredients}}">
          <label for="icon_telephone">Ingredients</label>
        </form>

  <button class="waves-effect waves-light btn z-depth-5" type="button" id="burgup"/>Update</button>
  <p id="p1" class="center-align">Update the burger name and ingredients of the burger and click Update!</p>
</div>

<script type="text/javascript">
	
 $("#burgup").on("click", function(event) {
	 	
	var burger = $(".input-field [name=burgeradd]").val().trim()
	var ingredients = $(".input-field [name=burgering]").val().trim()
	var id = $("#addburg").data("id");
  var user = $("#size").data("id");

 
    var dats ={
      burgs: burger,
      ings: ingredients,
      ids:id,
      users: user
    }

    console.log(dats);

    $.ajax("/ups",{
      type: "PUT",
      data: dats
    }).then(
      function() {
        console.log("updated");
        location.assign("/home/"+{{obj.id}}+"");
      }
    );
   });
</script>