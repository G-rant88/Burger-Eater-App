<h1>Update the Burger with an id of {{id}}</h1>
<br>
<div class="row2 center-align">
<form id="addburg" class="center-align" data-id="{{id}}">
  <div class="input-field col s6">
<i class="material-icons prefix">create</i>
<input id="icon_prefix" type="text" class="validate" name="burgeradd" value="{{burger_name}}">
          <label for="icon_prefix">Burger Name</label>
        </div>
<div class="input-field col s6">
          <i class="material-icons prefix">format_list_numbered</i>
          <input id="icon_telephone" type="tel" class="validate" name="burgering" value="{{ingredients}}">
          <label for="icon_telephone">Ingredients</label>
</div>
  <button class="waves-effect waves-light btn z-depth-5" type="button" id="burgup"/>Update</button>
  <p id="p1" class="center-align">Update the burger name and ingredients of the burger and click Update!</p>
</form>

<script type="text/javascript">
	
 $("#burgup").on("click", function(event) {
	 	
	var burger = $(".input-field [name=burgeradd]").val().trim()
	var ingredients = $(".input-field [name=burgering]").val().trim()
	var id = $("#addburg").data("id");
 
    var dats ={
      burgs: burger,
      ings: ingredients,
      ids:id
    }
    console.log(dats);

    $.ajax("/ups",{
      type: "PUT",
      data: dats
    }).then(
      function() {
        console.log("updated");
        location.assign("/");
      }
    );
   });

</script>